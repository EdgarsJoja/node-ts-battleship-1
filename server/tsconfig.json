{
    "compilerOptions": {
        "outDir": "./../dist",
        "allowJs": true,
        "target": "es6",
        "skipLibCheck": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "esModuleInterop": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "paths": {
            "*": [
                "../node_modules/",
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
