{
    "name": "node-ts-battleship",
    "version": "0.0.1",
    "description": "Battleship game in node.js",
    "main": "dist/server.js",
    "author": {
        "name": "Dāvis Zālītis",
        "url": "https://oatify.co/"
    },
    "license": "MIT",
    "scripts": {
        "build": "tsc -p server; tsc -p client",
        "watch-tss": "tsc -p server -w",
        "watch-tsc": "tsc -p client -w",
        "watch-node-server": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"pnpm run watch-tss\" \"pnpm run watch-tsc\" \"pnpm run watch-node-server\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ozo2003/node-ts-battleship.git"
    },
    "dependencies": {
        "@types/express": "^4.17.1",
        "@types/jquery": "^3.3.31",
        "@types/socket.io": "^2.1.4",
        "concurrently": "^5.0.0",
        "express": "^4.17.1",
        "nodemon": "^1.19.4",
        "socket.io": "^2.3.0",
        "typescript": "^3.6.4"
    }
}
